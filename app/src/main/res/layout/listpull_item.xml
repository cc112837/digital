<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/home_cell_bg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_homebackheadid"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@mipmap/article_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hometitleid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_homecontentid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:lines="2"
            android:layout_marginBottom="2dp"
            android:text="内容" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_typeid"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/category_home_small" />

        <TextView
            android:id="@+id/tv_hometypeid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/guide_dot_black" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/list_item_time_icon" />

        <TextView
            android:id="@+id/tv_hometimeid"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="3天前"
            android:textSize="10sp" />
     <TextView
         android:layout_width="0dp"
         android:layout_weight="8"
         android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/home_comment" />

            <TextView
                android:id="@+id/tv_homecomcountid"
                android:layout_marginRight="10sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:text="34"/>


    </LinearLayout>
</LinearLayout>