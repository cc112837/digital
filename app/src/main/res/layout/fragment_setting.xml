<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cc.digital.fragments.SettingFragment">

    <RelativeLayout
        android:id="@+id/news_top"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@mipmap/nav_bar"
        android:paddingTop="0dp">

        <RelativeLayout
            android:id="@+id/news_toolbar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="60.0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="16.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="35.0dip"
                android:paddingTop="16.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/nav_menubtn_selector" />

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="设置"
                android:textColor="#ff69707a"
                android:textSize="20.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="分享帐号绑定"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_flow"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:clickable="true"
            android:gravity="center_vertical"
            android:background="@mipmap/setting_cell"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="离线下载与省流量"
                android:textColor="#ff69707a"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_feedback"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="常见问题与反馈"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_to_friend"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="推荐给朋友"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_appraise"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="给个五星评价"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_push"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="是否接收推送"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/tb_push"
                android:layout_width="57dp"
                android:layout_height="28dp"
                android:layout_marginRight="10.0dip"
                android:background="@mipmap/toggle_me_on"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_clear_cache"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="清理缓存"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center|left"
                android:text="0.0M"
                android:textColor="#ff74787e"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="关于我们"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@mipmap/setting_cell"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="软件更新（当前版本2.5）"
                android:textColor="#ff69707a"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/digit_item_icon_arrow_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
